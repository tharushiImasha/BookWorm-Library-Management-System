      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="162.0" layoutY="406.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Username.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtpassword" layoutX="199.0" layoutY="477.0" prefHeight="33.0" prefWidth="308.0" promptText="Password" style="-fx-border-color: #002B5B; -fx-border-radius: 5; -fx-background-radius: 5;" />
      <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="162.0" layoutY="478.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/Password.png" />
